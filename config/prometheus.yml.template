global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'python-app'
    # Replace <VM_IP> with your VM IP (e.g. 192.168.1.150)
    static_configs:
      - targets: ['<VM_IP>:5001']
